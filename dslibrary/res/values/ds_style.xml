<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:taskOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:taskOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:taskCloseEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:taskCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="dialog_fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="tab_widget_item">
        <item name="android:background">@null</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
        <item name="android:layout_height">55dip</item>
    </style>

</resources>