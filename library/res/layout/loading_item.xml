<?xml version="1.0" encoding="utf-8"?>
<com.xdamon.widget.LoadingItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    tools:context="com.dianping.app.DPActivity" >

    <ImageView
        android:id="@+id/anim_icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="4dip"
		android:src="@drawable/loading_small"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载中..."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</com.xdamon.widget.LoadingItem>
