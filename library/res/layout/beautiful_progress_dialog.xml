<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/transparent_mask" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="240dip"
        android:layout_centerInParent="true"
        android:layout_height="60dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:background="@drawable/round_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/common_loading3" />

        <TextView
            android:id="@+id/message"
            android:layout_width="0px"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@drawable/beautiful_progress_dialog_vertical_divider" />

        <ImageView
            android:id="@+id/btn_cancel"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_margin="5dip"
            android:scaleType="centerInside"
            android:src="@drawable/icon_close" />
    </LinearLayout>

</RelativeLayout>