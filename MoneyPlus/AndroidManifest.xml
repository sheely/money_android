<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wanlonggroup.caiplus"
    android:installLocation="auto"
    android:versionCode="100"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.damon.ds.app.DSApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="登陆"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="login"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="首页"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="home"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cx.CxDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="财信详情"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cxdetail"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cx.CxReviewDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="财信留言"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cxreviewdetail"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".cq.CqCompanyDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="公司详情"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cqcompanydetail"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cq.CqTeamDetailActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="团队详情"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="cqteamdetail"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.damon.ds.app.DebugActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="Debug"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="debug"
                    android:scheme="cp" />
            </intent-filter>
        </activity>
    </application>

</manifest>