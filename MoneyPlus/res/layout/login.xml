<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="60dip"
        android:scaleType="fitXY"
        android:src="@drawable/app_logo" />

    <com.damon.ds.widget.TableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <LinearLayout
            style="@style/SingleLineTableItemWithPadding"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:src="@drawable/login_icon_username" />

            <EditText
                android:id="@+id/username"
                style="@style/ListBlackText"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="用户名"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:text="username" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/login_icon_close" />
        </LinearLayout>

        <LinearLayout
            style="@style/SingleLineTableItemWithPadding"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:src="@drawable/login_icon_password" />

            <EditText
                android:id="@+id/password"
                style="@style/ListBlackText"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:singleLine="true"
                android:text="password" />
        </LinearLayout>
    </com.damon.ds.widget.TableView>

    <Button
        android:id="@+id/login_btn"
        style="@style/GreenButton"
        android:layout_margin="15dip"
        android:text="登录" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/common_loading3" 
        android:visibility="gone"/>

</LinearLayout>