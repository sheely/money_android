<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CommonPadding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/title"
            style="@style/ListBlackText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="寻找有大型展馆经验的工程造价师" />

        <LinearLayout
            android:id="@+id/layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:textSize="@dimen/text_size_info" >

            <TextView
                android:id="@+id/type"
                style="@style/InfoGrayText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="类别：工程造价" />

            <TextView
                android:id="@+id/publish_time"
                style="@style/InfoGrayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布：2014-05-02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layer"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/status"
                style="@style/InfoGrayText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="状态：已发布" />

            <Button
                android:id="@+id/toggle_btn"
                style="@style/RedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:padding="2dip"
                android:text="关闭财信"
                android:textSize="@dimen/text_size_info" />

            <Button
                android:id="@+id/comment_btn"
                style="@style/GreenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:padding="2dip"
                android:text="财信评论"
                android:textSize="@dimen/text_size_info" />

            <Button
                android:id="@+id/execute_btn"
                style="@style/GreenButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:padding="2dip"
                android:text="执行人"
                android:textSize="@dimen/text_size_info" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:src="@drawable/arrow_normal" />

</LinearLayout>