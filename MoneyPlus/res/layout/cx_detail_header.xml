<?xml version="1.0" encoding="utf-8"?>
<com.wanlonggroup.caiplus.widget.CxDetailHeader xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cp="http://schemas.android.com/apk/res/com.wanlonggroup.caiplus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.xdamon.widget.TableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.wanlonggroup.caiplus.widget.BasicItem
            android:id="@+id/title_item"
            style="@style/BasicItemStyle"
            cp:item_title="财信" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_line_height"
            android:background="@drawable/table_view_item"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.wanlonggroup.caiplus.widget.BasicItem
                android:id="@+id/publish_item"
                style="@style/BasicItemStyle"
                android:layout_width="0dip"
                android:layout_weight="1"
                cp:item_title="发布者" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@drawable/gray_vertical_line" />

            <TextView
                android:id="@+id/look_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="查看"
                android:textColor="@color/text_color_blue"
                android:textSize="@dimen/text_size_list" />
        </LinearLayout>

        <com.wanlonggroup.caiplus.widget.BasicItem
            android:id="@+id/category_item"
            style="@style/BasicItemStyle"
            cp:item_title="分类" />
    </com.xdamon.widget.TableView>

    <LinearLayout
        android:id="@+id/layer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/single_line_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/look_attach"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="附件"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size_list" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/gray_vertical_line" />

        <TextView
            android:id="@+id/look_comment"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="评论"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size_list" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@drawable/gray_vertical_line" />

        <TextView
            android:id="@+id/execute_info"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dip"
            android:text="执行信息"
            android:textColor="@color/text_color_blue"
            android:textSize="@dimen/text_size_list" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/blue_horizontal_line" />

</com.wanlonggroup.caiplus.widget.CxDetailHeader>