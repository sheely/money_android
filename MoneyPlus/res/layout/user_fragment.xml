<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cp="http://schemas.android.com/apk/res/com.wanlonggroup.caiplus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ViewStub
        android:id="@+id/action_bar_stub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarHeight"
        android:layout="@layout/ds_action_bar" />

    <com.xdamon.widget.TableView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.xdamon.widget.BasicSingleItem
            android:id="@+id/my_calender"
            style="@style/SingleLineTableItemWithPadding"
            cp:item_icon="@drawable/icon_myprofile_mycalender"
            cp:item_indicator="@drawable/arrow_normal"
            cp:item_title="我的日历" />

        <com.xdamon.widget.BasicSingleItem
            android:id="@+id/my_concern"
            style="@style/SingleLineTableItemWithPadding"
            cp:item_icon="@drawable/icon_myprofile_myfocus"
            cp:item_indicator="@drawable/arrow_normal"
            cp:item_title="我的关注" />

        <com.xdamon.widget.BasicSingleItem
            android:id="@+id/my_team"
            style="@style/SingleLineTableItemWithPadding"
            cp:item_icon="@drawable/icon_myprofile_myteam"
            cp:item_indicator="@drawable/arrow_normal"
            cp:item_title="我的团队" />
        
        <com.xdamon.widget.BasicSingleItem
            android:id="@+id/version"
            style="@style/SingleLineTableItemWithPadding"
            cp:item_icon="@drawable/icon_myprofile_mycalender"
            cp:item_indicator="@drawable/arrow_normal"
            cp:item_title="版本" />
    </com.xdamon.widget.TableView>

    <Button
        android:id="@+id/logout_btn"
        style="@style/RedButton"
        android:layout_margin="15dip"
        android:text="退出登录" />

</LinearLayout>