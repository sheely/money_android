<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/main_bg</item>
        <item name="android:windowTitleSize">@dimen/actionBarHeight</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/actionbarBackground</item>
    </style>
    
    
    
    <!-- textview -->
    
    <style name="ListBlackText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/text_size_list</item>
    </style>
    
    <style name="HintGrayText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
    </style>
    
    <!-- button -->
    <style name="BlueButton" parent="android:Widget.Button">
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_list</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="GreenButton" parent="android:Widget.Button">
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_list</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <style name="RedButton" parent="android:Widget.Button">
        <item name="android:layout_height">45dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_list</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    
    <!-- list view  -->
    <style name="CustomListView" parent="android:Widget.AbsListView">
        <item name="android:listSelector">@drawable/list_item</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:background">@color/white</item>
        <item name="android:divider">@color/line_gray</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:choiceMode">singleChoice</item>
    </style>
    
    
     <!-- Table View start -->
    <style name="TableItem">
        <item name="android:background">@drawable/table_view_item</item>
    </style>

    <style name="TableItemWithPadding" parent="TableItem">
        <item name="android:paddingLeft">@dimen/table_item_padding</item>
        <item name="android:paddingRight">@dimen/table_item_padding</item>
    </style>

    <style name="SingleLineTableItemWithPadding" parent="TableItemWithPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_height</item>
    </style>

    <style name="SingleLineTableItem" parent="TableItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_height</item>
    </style>
    
    
    <style name="TableItemWithLine">
        <item name="android:background">@drawable/table_view_item_with_line</item>
    </style>
    
     <style name="TableItemWithPaddingLine" parent="TableItemWithLine">
        <item name="android:paddingLeft">@dimen/table_item_padding</item>
        <item name="android:paddingRight">@dimen/table_item_padding</item>
    </style>
    
     <style name="SingleLineTableItemWithPaddingLine" parent="TableItemWithPaddingLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_height</item>
    </style>
    
     
     <style name="TableHeaderTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/single_line_height</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/table_item_padding</item>
    </style>

    <style name="TableHeaderTextViewSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/section_height</item>
        <item name="android:textSize">@dimen/text_size_hint</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/table_item_padding</item>
    </style>
    
     <style name="CommonPadding">
        <item name="android:paddingLeft">@dimen/table_item_padding</item>
        <item name="android:paddingRight">@dimen/table_item_padding</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

     <style name="BasicItemStyle" parent="SingleLineTableItemWithPadding">
        <item name="item_indicator">@null</item>
        <item name="item_subTitleColor">@color/text_color_black</item>
        <item name="item_subTitleSize">@dimen/text_size_list</item>
        <item name="item_titleColor">@color/light_gray</item>
        <item name="item_titleSize">@dimen/text_size_list</item>
    </style>
</resources>